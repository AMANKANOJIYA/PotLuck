<!doctype html>
<html xmlns="http://www.w3.org/1999/html" lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PotLuck | Registration</title>
    <link rel="stylesheet" href="../../node_modules/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="../../node_modules/font-awesome/css/font-awesome.css">
    <link rel="stylesheet" href="../../public/css/login_signup.css">
    <link rel="stylesheet" href="../../public/css/fonts/Raleway.css">
    <link rel="stylesheet" href="../../node_modules/w3-css/w3.css">
    <script src="../../node_modules/jquery/dist/jquery.js"></script>
    <script src="../../node_modules/bootstrap/dist/js/bootstrap.js"></script>

    <style>
        body, h1 {
            font-family: "Raleway", sans-serif
        }

        body, html {
            height: 100%
        }

        .bgimg {
            min-height: 100%;
            background: black url("../../public/images/HeroImage.jpg") center;
            background-size: cover;
        }
    </style>
</head>
<body>
<div class="bgimg w3-animate-opacity">
    <div class="w3-display-topleft w3-padding-large w3-xlarge" style="z-index: 1; background-color: rgba(0,0,0,0.6); border-radius: 0 0 15px 0">
        <a href="<%= routes.index.pathname%>" style="text-decoration: none; color: #477496">PotLuck</a>
    </div>
    <div class="w3-display-container" style="padding-top: 80px;">
        <div class="w3-container" style="background-color: rgba(0,0,0,0.85)">
            <div class="col-sm-6 col-sm-offset-3 w3-animate-right">
                <form action="/signup" method="post" class="w3-container w3-text-blue w3-margin">
                    <h2 class="w3-center">Registration</h2>

                    <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user"></i></div>
                        <div class="w3-rest">
                            <input class="w3-input w3-border" name="name" type="text" placeholder="Name">
                        </div>
                    </div>

                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-envelope-o"></i></div>
                        <div class="w3-rest">
                            <input class="w3-input w3-border" name="email" type="email" placeholder="Email">
                        </div>
                    </div>

                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-key"></i></div>
                        <div class="w3-rest">
                            <input class="w3-input w3-border" name="password" type="password" placeholder="Password">
                        </div>
                    </div>

                    <p class="w3-center">
                        <button type="submit" class="w3-button w3-section w3-blue w3-ripple">Register</button>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <a id="foot" class="w3-button w3-block w3-blue w3-ripple w3-animate-bottom" href="<%= routes.login.pathname%>">Already have an account?
        Login here.</a>

</div>
</body>
</html>