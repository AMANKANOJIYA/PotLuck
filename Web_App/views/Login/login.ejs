<!doctype html>
<html xmlns="http://www.w3.org/1999/html" lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PotLuck | Login</title>

    <!--Import Google Icon Font-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <!-- CSS  -->
    <link type="text/css" rel="stylesheet" href="/css/materialize.min.css" media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="/css/Dashboard.css">
    <link type="text/css" rel="stylesheet" href="/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="/css/login_signup.css">
    <link type="text/css" rel="stylesheet" href="/raleway.min.css">
    <link type="text/css" rel="stylesheet" href="/w3.css">
    <style>
        body, h1 {
            font-family: "Raleway", sans-serif
        }

        body, html {
            height: 100%
        }

        .bgimg {
            height: 100%;
            background: gray;
            overflow: hidden;
        }

        .bgimg:before {
            background: url("/images/Bakmie-Goreng-with-Chicken-min.jpg") no-repeat fixed center;
            background-size: cover;
            display: block;
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0.6;
        }
    </style>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-108483296-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());

        gtag('config', 'UA-108483296-1');
    </script>
</head>
<body>
<div class="bgimg w3-animate-opacity">
    <div class="w3-display-topleft w3-padding-large w3-xlarge"
         style="z-index: 1; background-color: rgba(0,0,0,0.6); border-radius: 0 0 15px 0">
        <a href="<%= routes.index.pathname %>" style="text-decoration: none; color: #477496">PotLuck</a>
    </div>
    <div class="w3-display-container" style="padding-top: 80px;">
        <div class="container-fluid" style="background-color: rgba(0,0,0,0.85)">
            <div class="col-sm-6 col-sm-offset-3 w3-animate-right">
                <form action="<%= routes.login.pathname %>" method="post" class="w3-container w3-text-blue w3-margin">
                    <h2 class="w3-center">Login</h2>

                    <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-envelope-o"></i></div>
                        <div class="w3-rest">
                            <input class="w3-input w3-border browser-default" name="email" type="email"
                                   placeholder="Email">
                        </div>
                    </div>

                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-key"></i></div>
                        <div class="w3-rest">
                            <input class="w3-input w3-border browser-default" name="password" type="password"
                                   placeholder="Password">
                        </div>
                    </div>

                    <p class="w3-center">
                        <button type="submit" class="w3-button w3-section w3-blue w3-ripple">Login</button>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <a id="foot" class="w3-button w3-block w3-blue w3-ripple w3-animate-bottom" href="<%= routes.signup.pathname %>">Need
        an account? Register
        here.</a>

</div>

<footer class="page-footer black">
    <div class="container">
        <div class="row">
            <div class="col l6 s12">
                <h5 class="white-text">PotLuck Beta Phase</h5>
                <p class="grey-text text-lighten-4">Finally, an application to help you decide what you want for dinner
                    tonight.</p>
            </div>
            <div class="col l4 offset-l2 s12">
                <h5 class="white-text">More</h5>
                <ul>
                    <li><a class="grey-text text-lighten-3"
                           href="<%= routes.privacy_policy.pathname %>"><%= routes.privacy_policy.alias %></a></li>
                    <li><a class="grey-text text-lighten-3"
                           href="<%= routes.tos.pathname %>"><%= routes.tos.alias %></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="footer-copyright">
        <div class="container">
            Â© 2016 - 2017 ISU-DSL, All rights reserved.
            <a class="grey-text text-lighten-4 right" href="http://home.engineering.iastate.edu/~chinmay/">Iowa State
                Data Science Lab</a>
        </div>
    </div>
</footer>

<!-- Scripts  -->
<script type="text/javascript" src="/jquery.min.js"></script>
<script type="text/javascript" src="/js/bootstrap.min.js"></script>
<script type="text/javascript" src="/js/materialize.min.js"></script>
<script>
    function getDocHeight() {
        const D = document;
        return Math.max(
            D.body.scrollHeight, D.documentElement.scrollHeight,
            D.body.offsetHeight, D.documentElement.offsetHeight,
            D.body.clientHeight, D.documentElement.clientHeight
        );
    }

    $(document).ready(() => {
        $(window).scroll(() => {
            if ($(window).scrollTop() + $(window).height() === getDocHeight())
                $("#foot").css('display', 'none');
            else
                $("#foot").css('display', 'block');
        });
    });
</script>
</body>
</html>